    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dockerless ContactsAPI",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start_dockerless"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/../../**",
            ],
            "outFiles": [
                "${workspaceFolder}/../../node_modules/@contacts/**/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_PATH": "${workspaceFolder}/out/:${workspaceFolder}/node_modules:${workspaceFolder}/../../node_modules",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "contacts_db",
                "DB_USER": "contacts_user",
                "DB_PASSWORD": "contacts_password",
                "environment": "localstack"
            },
            "outputCapture": "std",
        },
    ]
}